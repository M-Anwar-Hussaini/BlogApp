<h1>Add new post</h1>
<%= form_with(model: [@user, @post]) do |form| %>
  <div class="my-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="my-3">
    <%=form.label :text %>
    <%=form.text_area :text, class: 'form-control' %>
  </div>
  <div class="my-3">
    <%=form.submit class: 'btn btn-success' %>
  </div>
<% end %>