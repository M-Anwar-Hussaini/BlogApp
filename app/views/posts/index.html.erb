<section>
  <div class="container">
    <h1 class="text-bg-dark w-100">Profile of <%= @user.name %></h1>
    <div class="row p-3 gx-5">
      <div class="col-3 border border-dark rounded">
        <img src="<%= @user.photo %>" alt="<%= @user.name %>" class="img-thumbnail">
      </div>
      <div class="col ms-2 border border-dark rounded p-2">
        <h3><%= @user.name %></h3>
        <p class="text-end"><strong>Number of posts: </strong><%= @user.posts_counter %></p>
      </div>
    </div>
  </div>
</section>


<div class="my-3">
  <%= link_to 'Create post', new_user_post_path(@user), class: 'btn btn-warning' %>
</div>
<!--Bio-->
<section>
  <div class="card">
    <div class="card-header">
      Bio
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <%= @user.bio %>
      </blockquote>
    </div>
  </div>
</section>

<br><br>
<!--All Posts-->
<section class="mb-3">
  <div class="container border rounded p-4">
    <h2 class="mb-4">Recent Posts</h2>
    <ul class="list-group list-group-flush mb-5">
      <% @posts.each do |post| %>
        <li class="list-group-item ">
          <h3>Title: <%= post.title %></h3>
          <p><%= post.text %></p>


          <div class="d-flex justify-content-between align-items-center mb-2">

            <%=link_to 'Create Comment', new_user_post_comment_path(@user, post) %>
            <%=link_to 'View Post', user_post_path(@user, post) %>

          </div>
          <h6>Recent Comments</h6>
          <% post.recent_comments.each do |comment| %>
            <strong><%= comment.user.name %></strong>
            <p><%= comment.text %></p>
          <% end %>

        </li>


      <% end %>
    </ul>
  </div>

</section>