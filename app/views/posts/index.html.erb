<%= render 'layouts/profile', user: @user %>

<div class="mt-4">
  <%= link_to 'Add new post', new_user_post_path(@user), class: 'btn btn-secondary ms-auto' %>
  <h2>All Posts:</h2>
  <% @user.posts.each do |post| %>
    <div class="my-3">
      <%= render 'post', post: post %>
      <% if post.comments.length != 0 %>
        <%= render 'layouts/comments', comments: post.recent_comments %>
      <% end %>
    </div>
  <% end %>
</div>