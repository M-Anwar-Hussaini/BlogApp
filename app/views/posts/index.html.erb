<main class="user-container">
  <div class="user-wrapper">
    <div class="photo-box bordered">
      <img class="user-img" src="
        <% @user.photo %>" alt="<%= @user.name %>">
    </div>

    <div class="text-box bordered">
      <h3><%= @user.name %></h3>
      <p>Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>


  <section>
    <% @user.posts.each_with_index do |post, index| %>
      <div class="post bordered">
        <h3>Post #<%= (index + 1) %></h3>
        <p><%= post.text %></p>
        <p class="right">Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
      </div>
      <div class="comments bordered">
        <h4>Comments: </h4>
        <% post.comments.each do |comment| %>
          <p>
            <strong><%= comment.user.name %></strong>
            <span><%= comment.text %></span>
          </p>
        <% end %>
      </div>
    <% end %>
  </section>
</main>

