<section class="my-4 border p-3">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-4 mb-3">Post #<%=@post.id %> by <%=@user.name %> </h2>
    <p class="text-end mb-3">Comments: <%=@post.comments_counter %>, Likes: <%=@post.likes_counter %></p>
  </div>
  <p><%=@post.text %></p>
  <div class="flex justify-end">
    <%= form_with model: @like, url: user_post_likes_path(@user, @post, post_id: @post.id) do |form| %>

  <%= form.submit "Like"%>
    <% end %>
  </div>
</section>

<section class="border p-3">
  <%@post.comments.each do |comment|%>
    <p><strong><%=comment.user.name %></strong>: <%=comment.text %></p>
  <% end %>

</section>